{% extends 'base.html.twig' %}

{% block title %}Fiche Catégorie{% endblock %}

{% block body %}
<div class="container mt-5">

    <h1>Fiche Catégorie</h1>
    <a href="{{ path('app_admin_car_category_index') }}" class="btn btn-secondary">Retour à la liste</a>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car_category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ car_category.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ car_category.slug }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-around my-5">
        <a href="{{ path('app_admin_car_category_edit', {'id': car_category.id}) }}">edit</a>
        {{ include('admin_car_category/_delete_form.html.twig') }}
    </div>
    
</div>
{% endblock %}
