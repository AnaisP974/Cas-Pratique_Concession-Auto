{% extends 'base.html.twig' %}

{% block title %}Fiche Technique{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Fiche Technique</h1>
    <a href="{{ path('app_admin_car_index') }}" class="btn btn-secondary">Retour à la liste</a>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ car.name }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ car.category }}</td>
            </tr>
            <tr>
                <th>Places assises</th>
                <td>{{ car.nbSeats }}</td>
            </tr>
            <tr>
                <th>Nombre de portes</th>
                <td>{{ car.nbDoors }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ car.cost }} €</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-around my-5">
        <a href="{{ path('app_admin_car_edit', {'id': car.id}) }}" class="btn btn-success"><i class="bi bi-pencil-fill"></i> Modifier</a>
        {{ include('admin_car/_delete_form.html.twig') }}
    </div>
    
</div>
{% endblock %}
